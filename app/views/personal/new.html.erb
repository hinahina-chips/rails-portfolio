<div class="card-list-container py-5">
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-10">
            <p class="card-text"><%= post.title %></p>
            <%= post.id %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
