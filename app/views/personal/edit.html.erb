<%= form_with(model: @qiita_item, url: personal_path(@qiita_item)) do |f| %>
  
    <% if @qiita_item.image.attached? %>
      <p>現在の画像:</p>
      <%= image_tag @qiita_item.image %>
      <p>新しい画像を選択:</p>
    <% else %>
      <p>画像をアップロード:</p>
    <% end %>
    <%= f.file_field :image %>
  
    <%= f.submit "更新" %>
  <% end %>